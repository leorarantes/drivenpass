generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  password    String
  credentials Credentials[]
  safeNotes   Safenotes[]

  @@map("users")
}

model Credentials {
  id         Int       @id @default(autoincrement())
  user       Users @relation(fields: [userId], references: [id])
  userId     Int
  url        String
  title      String
  username   String    
  password   String

  @@map("credentials")
}

model Safenotes {
  id         Int       @id @default(autoincrement())
  user       Users @relation(fields: [userId], references: [id])
  userId     Int
  title      String
  note       String

  @@map("safenotes")
}